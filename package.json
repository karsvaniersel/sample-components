{
    "name": "sample-components",
    "version": "0.0.1",
    "description": "Stencil Component Starter",
    "main": "dist/index.js",
    "module": "dist/custom-elements/index.js",
    "es2015": "dist/esm/index.mjs",
    "es2017": "dist/esm/index.mjs",
    "types": "dist/custom-elements/index.d.ts",
    "collection": "dist/collection/collection-manifest.json",
    "collection:main": "dist/collection/index.js",
    "unpkg": "dist/sample-components/sample-components.js",
    "files": [
        "dist/",
        "loader/"
    ],
    "scripts": {
        "build": "stencil build --docs",
        "dev": "npm run build && npm run storybook:build && concurrently --kill-others \"npm run start\" \"npm run storybook\"",
        "start": "stencil build --dev --watch --serve",
        "test": "stencil test --spec --e2e",
        "test.watch": "stencil test --spec --e2e --watchAll",
        "generate": "stencil generate",
        "storybook:build": "build-storybook -s www -c .storybook -o public",
        "storybook:deploy": "npm run build && npm run storybook:build",
        "storybook:build:all": "rm -rf www && rm -rf public && npm run start && npm run storybook:build && npm run storybook:serve",
        "storybook": "start-storybook -p 7002 -s www -c .storybook"
    },
    "dependencies": {
        "@stencil/core": "^1.17.3"
    },
    "license": "MIT",
    "devDependencies": {
        "@stencil/postcss": "^1.0.1",
        "@stencil/sass": "^1.3.2",
        "@storybook/addon-docs": "^5.3.19",
        "@storybook/addon-knobs": "^5.3.19",
        "@storybook/addon-notes": "^5.3.19",
        "@storybook/addon-options": "5.3.19",
        "@storybook/addon-viewport": "^5.3.19",
        "@storybook/addons": "^5.3.19",
        "@storybook/html": "^5.3.19",
        "@types/jest": "25.2.3",
        "@types/puppeteer": "2.0.1",
        "babel-loader": "^8.0.6",
        "concurrently": "^5.0.0",
        "jest": "26.0.1",
        "jest-cli": "26.0.1"
    }
}
